config network
        option upload_interface 'wan'
        option download_interface 'ifb4wan'
        option upload_base_kbits '10000'
        option download_base_kbits '10000'
        option upload_min_percent '20'
        option download_min_percent '20'

config output
        option log_level 'WARN'            # Change to DEBUG to see more detail logged in /tmp/
        option use_syslog '0'              # Change to '1' to enable log output into syslog
        option suppress_statistics 'yes'   # Change to 'no', 'false', '0' to enable statistics and speedhist in /tmp/
        option stats_file '/tmp/sqm-autorate.csv'
        option speed_hist_file '/tmp/sqm-speedhist.csv'

config observability
        option enabled '0'                 # Change to '1' to enable metrics export
        option protocol 'udp'              # 'udp' (fire-and-forget) or 'tcp' (with reconnection)
        option host ''                     # Remote collector IP/hostname (e.g., '192.168.1.100')
        option port '8089'                 # InfluxDB UDP port (8089) or TCP port (8086)
        option batch_size '50'             # Number of metrics to batch before sending
        option batch_timeout_ms '100'      # Max time to wait for batch to fill (ms)
        option export_ping_metrics '0'     # Export raw ping times per reflector 
        option export_rate_metrics '1'     # Export rate controller metrics
        option export_baseline_metrics '0' # Export EWMA baseline/recent values (high volume)
        option export_events '1'           # Export events (reselection, etc.)
        option host_tag ''                 # Host tag for multi-router setups (defaults to hostname)
